<% layout('layouts/boilerplate') %>
<div class="container d-flex justify-content-center align-items-center mb-3">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <img
          src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
          alt=""
          class="card-img-top"
          crossorigin="anonymous" />
        <div class="card-body">
          <h5 class="h5 card-title">Register</h5>
          <form
            action="/register"
            method="POST"
            class="validated-form"
            novalidate>
            <div class="mb-3">
              <label class="form-label" for="username">Username:</label>
              <input
                class="form-control"
                type="text"
                name="username"
                id="username"
                autofocus
                required />
              <div class="valid-feedback">Nice username!</div>
              <div class="invalid-feedback">How do we call you?</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="email">Email:</label>
              <input
                class="form-control"
                type="email"
                name="email"
                id="email"
                required />
              <div class="valid-feedback">Great email!</div>
              <div class="invalid-feedback">You need to put a valid email!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="password">Password:</label>
              <input
                class="form-control"
                type="password"
                name="password"
                id="password"
                required />
              <div class="valid-feedback">
                Don't forget this, it seems important!
              </div>
              <div class="invalid-feedback">
                Don't forget to create a safe password!
              </div>
            </div>
            <div class="d-grid gap-2">
              <button class="btn btn-success">Register</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
